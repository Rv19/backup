    <link rel="stylesheet" href="https://cdnjs. cloudflare.com/ajax/libs/font-awesome/4.7.0/ css/font-awesome.min.css">
    <style>
        .cards-list {
            z-index: 0;
            width: 100%;
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
   
        }



        .cards-lis {
            z-index: 0;
            width: 100%;
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            text-align: center;
        }

        p{
            background:#000000;
        }

        .card {
            margin: 30px auto;
            width: 300px;
            height: 300px;
            border-radius: 40px;
            /* box-shadow: 2px 2px 15px 4px rgba(0,0,0,0.25), -2px -2px 15px 4px rgba(0,0,0,0.22);*/
            cursor: pointer;
            transition: 0.4s;
        }

        .car {
            margin-top: 15px;
            width: 1200px;
            height: 50px;
            box-shadow: 2px 2px 15px 4px rgba(0,0,0,0.25);
            cursor: pointer;
            transition: 0.4s;
        }

            .card .card_image {
                width: inherit;
                height: inherit;
                border-radius: 40px;
            }

                .card .card_image img {
                    width: inherit;
                    height: inherit;
                    border-radius: 40px;
                    object-fit: cover;
                }

            .card .card_title {
                text-align: center;
                border-radius: 0px 0px 40px 40px;
                font-family: sans-serif;
                font-weight: bold;
                font-size: 30px;
                margin-top: -80px;
                height: 40px;
            }

            .card:hover {
                transform: scale(0.9, 0.9);
                box-shadow: 5px 5px 30px 15px rgba(0,0,0,0.25), -5px -5px 30px 15px rgba(0,0,0,0.22);
            }

        .title-white {
            color: white;
        }

        .title-black {
            color: black;
        }

        p1 {
            color: black;
            font-size: 30px;
            text-align: center;
        }

        p2 {
            color: deepskyblue;
        }

        
        @@media all and (max-width: 500px) {
            .card-list {
                /* On small screens, we are no longer using row direction but column */
                flex-direction: column;
            }
        }

        .bg-modal{
            width:80%;
            height:80%;
            position:absolute;
            top:0;
            justify-content:center;
            align-items:center;
            display:none;
        }

        .modal-content {
            width: 80%;
            height: 80%;
            background-color: white;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
        }

        .bg-modal2 {
       
            width: 80%;
            height: 80%;
            position: absolute;
            top: 0;
            justify-content: center;
            align-items: center;
            display: none;
  
        }

        .modal-content2 {
            width: 80%;
            height: 80%;
            background-color: white;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            border-radius: 8px;
            box-shadow: rgba(112, 128, 175, 0.2) 0px 16px 24px 0px;
            transition: transform 300ms cubic-bezier(0.57, 0.21, 0.69, 1.25);
        }
        .close{
            position:absolute;
            top:0;
            right:14px;
            font-size:42px;
            transform:rotate(45deg);
            cursor:pointer;
        }
        .close2 {
            position: absolute;
            top: 0;
            right: 14px;
            font-size: 42px;
            transform: rotate(45deg);
            cursor: pointer;
        }





        body {
            font-family: 'Lato', sans-serif
        }

        h1 {
            margin-bottom: 40px
        }

        label {
            color: #333
        }

        .btn-send {
            font-weight: 300;
            text-transform: uppercase;
            letter-spacing: 0.2em;
            width: 80%;
            margin-left: 3px
        }

        .help-block.with-errors {
            color: #ff5050;
            margin-top: 5px
        }

        .ca {
            margin-left: 10px;
            margin-right: 10px
